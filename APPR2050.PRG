STORE 0                                                TO WNUMLUN
STORE MONTH(APNOMINA->APER2)                           TO WMESACT
STORE  YEAR(APNOMINA->APER2)                           TO WANOACT
STORE CTOD("01-"+STR(WMESACT,2)+"-"+STR(WANOACT,4))    TO WFECTEST
DO WHILE WMESACT=MONTH(WFECTEST)
   IF DOW(WFECTEST)=2
      STORE WNUMLUN+1 TO WNUMLUN
   ENDIF
   STORE WFECTEST + 1 TO WFECTEST
ENDDO
